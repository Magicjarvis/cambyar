  body
    .topbar
      .fill
        .container
          a(href='/').brand
            strong Cambyar
          ul.nav
            if req.loggedIn                                                                      
              li
                a(href="/portal") Portal
              li
                if req.user.notifications > 0
                  a(href='/requests') Requests (#{req.user.notifications})
                else 
                  a(href='/requests') Requests
          ul.nav.secondary-nav
            if req.loggedIn                                                                      
              li                                                                       
                img(src=email_hash + '?s=30')                                                          
              li
                a(href='/user/#{user.username}') #{utils.capitalize(user.username)}
              li                                                                              
                a(href='/logout', title='Leave us') Logout                                   
            else                                                                             
              li                                                                              
                a(href='/register?n='+enc_url, title='Registration Page') Register                      
              li
                a(href='/login?n='+enc_url, title='Login Page') Login                                   

