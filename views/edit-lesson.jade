h2 Edit Lesson

form(action='/lessons/edit?l='+lesson._id, method='POST')
  p
    label(for='title') Title
    input(type='text', name='title', value= lesson.title)#title
  p
    label(for='tags') Tags
    input(type='text', name='tags', value= " ")#tags
  p
    label(for='desc') Description
    input(type='text', name='desc', value= lesson.description)#desc 
  p
    input(type='submit', value='Save Changes')
