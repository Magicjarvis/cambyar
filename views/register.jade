h2 Registration Page

.errors
  if typeof errors != 'undefined'
    ul
      each error in errors
        li= error


form(action='/register', method='POST') 
  p
    label(for='login') Desired Username
    input(type='text', name=everyauth.password.loginFormFieldName)#login
  p
    label(for='password') Password
    input(type='password', name=everyauth.password.passwordFormFieldName)#password
  p
    label(for='email') E-mail
    input(type='text', name='email')#email
   p
    label(for='first_name') First Name
    input(type='text', name='first_name')#first_name
  p
    label(for='last_name') Last Name
    input(type='text', name='last_name')#last_name
  p
    input(type='submit', value='Submit')
